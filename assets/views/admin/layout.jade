doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title JailBreak App
    link(href='/css/app.css', rel='stylesheet')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Jailbreak 2015
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-left
            li
              a(href='/admin') Home
            li
              a(href='/admin/teams') Teams
            li
              a(href='/admin/locations') Locations
            if user.isAdmin
              li
                a(href='/admin/users') Users
        
          a.header-btn.header-woof.woof-crouch(href='#')
            div.clifford-talk-hider
            div.clifford-talk-container
              span.clifford-talk-left-paw
              span.clifford-talk-small-icon
              span.clifford-talk-right-paw
              span.header-btn-text
                span.left-arrow
                span.js-phrase Built by LA1:TV
          
          .nav.navbar-nav.navbar-right
            p.navbar-btn
              a.btn.btn-success(href='/auth/logout') Logout
              
    .container
      include flash
      block content
        
    script(src='http://maps.googleapis.com/maps/api/js?key=AIzaSyCOSGdGETZCnG79ZoWuq1JNi3aurSHMU0A&libraries=places')
    script(src='/js/app.js')
    
    block js
